<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_recycler_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"/>

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_recycler_date" />

    <TextView
        android:id="@+id/text_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:layout_toRightOf="@id/img_icon"
        android:layout_alignBottom="@id/img_icon"/>

    <TextView
        android:id="@+id/text_temp_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/img_icon"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/text_temp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max"
        android:layout_toLeftOf="@id/text_temp_min"
        android:layout_alignBottom="@id/img_icon"
        android:layout_marginBottom="4dp"/>

</RelativeLayout>